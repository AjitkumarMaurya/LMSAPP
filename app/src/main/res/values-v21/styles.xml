<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="android:colorAccent">@color/egatta</item>
        <item name="android:colorPrimaryDark">@color/egatta</item>
        <item name="android:colorPrimary">@color/egatta</item>
        <item name="android:colorControlActivated">@color/egatta</item>
        <item name="android:colorControlNormal">@color/black</item>
        <item name="android:spinnerStyle">@style/AppTheme.spinnerStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/AppTheme.spinnerDropDownItemStyle</item>


    </style>

    <style name="AppTheme.spinnerStyle" parent="@android:style/Widget.Material.Light.Spinner">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="AppTheme.spinnerDropDownItemStyle" parent="@android:style/Widget.Material.DropDownItem.Spinner">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:drawableRight">@drawable/ic_arrow_drop_down_black_24dp</item>
    </style>

    <style name="popup_theme" parent="@android:style/Theme.Light">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
    </style>
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="android:colorAccent">@color/egatta</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#000</item>
        <!-- Used for the background -->
        <item name="android:background">#FFFFFF</item>
    </style>
    <style name="Checkbox.Default" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:colorAccent">@color/black</item>
    </style>

    <style name="spinner_style">
        <item name="android:background">@color/egatta</item>
    </style>
</resources>