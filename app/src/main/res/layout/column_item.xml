<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    android:id="@+id/item_layout_drag"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_30sdp"
   >


        <LinearLayout
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_1sdp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/text_drag"
                android:layout_width="0dp"
                android:gravity="center"
                android:padding="@dimen/_1sdp"
                android:textColor="@color/white"
                android:background="@color/egatta"
                android:layout_weight="10"
                android:layout_height="match_parent"
                android:text="test testtest test testtest test testtesttest test testtest test test testtest test testtest test test"
                android:textSize="@dimen/_10ssp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:background="@color/egatta"
                android:tint="@color/white"
                android:layout_height="match_parent"
                android:src="@drawable/up_down_arrow"/>



        </LinearLayout>
</LinearLayout>
