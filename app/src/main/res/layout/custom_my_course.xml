<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_4sdp"
    android:tag="cards main container">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_105sdp"
        card_view:cardBackgroundColor="@color/appTheme"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="1.2"
                android:scaleType="fitXY"
                android:src="@drawable/course_image" />

            <LinearLayout
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewCategory"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="Category"
                    android:gravity="center_vertical"
                    android:textColor="#c75d1d"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14ssp"/>

                <TextView
                    android:id="@+id/textViewCourseName"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:maxLength="40"
                    android:text="course name course name course name course name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/textViewCourseStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="course status"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/egatta"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textViewCourseId"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="invisible" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>